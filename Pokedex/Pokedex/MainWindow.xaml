<Window x:Class="Pokedex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokedex"
        xmlns:apresentacao="clr-namespace:Apresentacao.View;assembly=Apresentacao"
        xmlns:componente="clr-namespace:Apresentacao;assembly=Apresentacao"
        xmlns:controles="clr-namespace:Controles;assembly=Controles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <apresentacao:PokemonView Margin="0,0,20,0" x:Name="listaPokemon"/>
            <componente:CardDePokemonView x:Name="cardViewPokemon"/>
        </StackPanel>
    </StackPanel>
    
</Window>
